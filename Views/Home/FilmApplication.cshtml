@{
    ViewBag.Title = "Please Enter the Movies";
}

@model FilmCollection.Models.Response 

<form asp-action="FilmApplication" method="post">
    <div>
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" />
    </div>
    <br />

    <div>
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" />
    </div>
    <br />

    <div>
        <label asp-for="Year">Year:</label>
        <input asp-for="Year" />
    </div>
    <br />

    <div>
        <label asp-for="Director">Director:</label>
        <input asp-for="Director" />
    </div>
    <br />

    <div>
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="">Select One</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>
    <br />

    <div>
        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="">Select One</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <br />

    <div>
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" />
    </div>

    <div>
        <label>Notes:</label>
        <input />
    </div>
    <br />

    <div>
        <button type="submit" id="submitButton" class="btn-success">Submit the Film</button>
        <div asp-validation-summary="All"></div>
    </div>

</form>